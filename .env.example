# ============================================
# FB Auto Poster - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# --- Facebook Credentials ---
FACEBOOK_EMAIL=
FACEBOOK_PASSWORD=

# --- Dashboard Auth ---
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=

# --- Server Settings ---
HOST=0.0.0.0
PORT=5000
DEBUG=false
SECRET_KEY=your-secret-key-here

# --- Proxy (optional) ---
# Format: http://user:pass@host:port or socks5://host:port
PROXY_URL=

# --- Posting Behavior ---
HEADLESS_ONLY=1
DRY_RUN=0
RETRY_PER_GROUP=1
MIN_DELAY_BETWEEN_POSTS=30
MAX_DELAY_BETWEEN_POSTS=120

# --- Rate Limiting ---
# Maximum posts per hour per account (0 = unlimited)
RATE_LIMIT_POSTS_PER_HOUR=10
# Maximum groups per post (0 = unlimited)
RATE_LIMIT_GROUPS_PER_POST=20

# --- Smart Delays ---
# Use Gaussian distribution for more human-like delays
USE_GAUSSIAN_DELAYS=true
# Activity hours (posting will prefer these hours)
ACTIVITY_HOURS_START=8
ACTIVITY_HOURS_END=22

# --- Session Monitoring ---
# Check session validity every N minutes
SESSION_CHECK_INTERVAL_MINUTES=30
# Alert webhook URL for session expiry notifications
SESSION_ALERT_WEBHOOK=

# --- Backup Settings ---
# Enable automatic backups
ENABLE_AUTO_BACKUP=true
# Backup interval in hours
BACKUP_INTERVAL_HOURS=24
# Maximum backup files to keep
BACKUP_MAX_FILES=7

# --- Timezone ---
# Default timezone for scheduling (e.g., America/New_York, Europe/London)
TIMEZONE=UTC

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# --- Error Monitoring (Sentry) ---
SENTRY_DSN=

# --- Feature Flags ---
ENABLE_SCHEDULING=true
ENABLE_SPINTAX=true
ENABLE_MULTI_ACCOUNT=false
ENABLE_MEDIA_LIBRARY=true
ENABLE_CONTENT_TEMPLATES=true
